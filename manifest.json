{
  "manifest_version": 3,
  "name": "ChatGPT Response Jumper",
  "version": "1.3.0",
  "description": "Right-rail Response Jump list for ChatGPT + small quality-of-life fixes.",
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["scripts/content.js"],
      "css": [
        "styles/backgrounds.css",
        "styles/common.css",
        "styles/composer.css",
        "styles/css-vars.css",
        "styles/fonts.css",
        "styles/images.css",
        "styles/panel.css",
        "styles/styles.css",
        "styles/upper.css",
        "styles/visibility.css"
      ],
      "run_at": "document_start"

    }
  ]
}
