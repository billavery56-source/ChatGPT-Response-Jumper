{
  "manifest_version": 3,
  "name": "ChatGPT Response Jumper",
  "version": "1.3.1",
  "description": "Right-side Responses panel for ChatGPT with CSS-driven layout split between upper thread and composer.",
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
  "styles/vars.css",
  "styles/backgrounds.css",
  "styles/fonts.css",
  "styles/images.css",

  "styles/common.css",
  "styles/upper.css",
  "styles/composer.css",

  "styles/panel.css",
  "styles/styles.css",
  "styles/visibility.css",

  "styles/panel-overrides.css"
]
,
      "run_at": "document_start"
    }
  ]
}
